{
  "kind": "collectionType",
  "collectionName": "characters",
  "info": {
    "singularName": "character",
    "pluralName": "characters",
    "displayName": "Character"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Picture": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "Type": {
      "type": "enumeration",
      "enum": [
        "player",
        "pnj",
        "monster"
      ]
    },
    "Name": {
      "type": "string"
    },
    "race": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::race.race"
    },
    "Description": {
      "type": "richtext"
    },
    "CurrentLife": {
      "type": "integer"
    },
    "Stats": {
      "type": "component",
      "component": "character.stats",
      "repeatable": false
    },
    "Bonus": {
      "type": "component",
      "component": "character.stats",
      "repeatable": false
    },
    "competences": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::competence.competence"
    },
    "Inventory": {
      "type": "component",
      "component": "character.inventory",
      "repeatable": false
    }
  }
}
