{
  "kind": "collectionType",
  "collectionName": "characters",
  "info": {
    "singularName": "character",
    "pluralName": "characters",
    "displayName": "Character"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "picture": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "player",
        "pnj",
        "monster"
      ]
    },
    "name": {
      "type": "string"
    },
    "race": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::race.race"
    },
    "description": {
      "type": "richtext"
    },
    "currentLife": {
      "type": "integer"
    },
    "stats": {
      "type": "component",
      "component": "character.stats",
      "repeatable": false
    },
    "bonus": {
      "type": "component",
      "component": "character.stats",
      "repeatable": false
    },
    "competences": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::competence.competence"
    },
    "inventory": {
      "type": "component",
      "component": "character.inventory",
      "repeatable": false
    },
    "game": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::game.game"
    },
    "player": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::player.player"
    }
  }
}
